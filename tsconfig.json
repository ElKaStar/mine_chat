{
  "compilerOptions": {
    "target": "ES6",
    "removeComments": false,
    "outDir": "public",
    "sourceMap": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "module": "ES6",
    "moduleResolution": "Node",
    "lib": ["es5", "es6", "dom", "ES2017.Object"],
    "experimentalDecorators": true
  },
  "exclude": [
    "node_modules",
    "server.js"
  ]
}